<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMenuPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#FFF7E9"
    tools:context=".MenuPrincipalActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Punto de Venta GenÃ©rico"
        android:textColor="#5B3A29"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnIniciarVenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar venta" />

    <Button
        android:id="@+id/btnAgregarProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar producto"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnVerProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver / Editar productos"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnHistorialVentas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Historial de ventas"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnVerComandas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver comandas"
        android:layout_marginTop="12dp" />
</LinearLayout>
